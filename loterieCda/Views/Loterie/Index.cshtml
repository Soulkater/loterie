@{
    for (int i = 1; i < 50; i++)
    {
        
        <div id="grille-total">
            <div class="grille">
                <input type="button" value="@i" id="@i" onclick="jouer(this.value)">
            </div>
        </div>

        if (i % 7 == 0)
        {
            <br />
        }
    }
}


